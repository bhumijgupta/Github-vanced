{
    "manifest_version": 2,
    "name": "Github Contri (beta)",
    "description": "Don't get distracted by contribution chart on GitHub. Color it all green",
    "version": "1.1.9",
    "author": "Bhumij Gupta",
    "icons": {
        "16": "assets/icon_16.png",
        "32": "assets/icon_32.png",
        "48": "assets/icon_48.png",
        "128": "assets/icon_128.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["http://github.com/*", "https://github.com/*"],
        "js": ["colorify.js", "darktheme.js"],
        "run_at": "document_end"
    }],
    "options_page": "popup.html",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": ["storage"]
}